{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true
    },
    "filesGlob": [
        "**/*.ts",
        "**/*.tsx",
        "!node_modules/**"
    ],
    "files": [
        "lib/index.ts",
        "tests/custom_assertions.d.ts",
        "tests/squick_tests.ts",
        "typings/chalk/chalk.d.ts",
        "typings/dustjs-linkedin/dustjs-linkedin.d.ts",
        "typings/es6-promise/es6-promise.d.ts",
        "typings/glob/glob.d.ts",
        "typings/gulp-util/gulp-util.d.ts",
        "typings/marked/marked.d.ts",
        "typings/mocha/mocha.d.ts",
        "typings/node/node.d.ts",
        "typings/others.d.ts",
        "typings/should/should.d.ts",
        "typings/through/through.d.ts",
        "typings/tsd.d.ts",
        "typings/vinyl-buffer/vinyl-buffer.d.ts",
        "typings/vinyl/vinyl.d.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
