{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true
    },
    "filesGlob": [
        "**/*.ts",
        "**/*.tsx",
        "!node_modules/**"
    ],
    "files": [
        "lib/index.ts",
        "typings/dustjs-linkedin/dustjs-linkedin.d.ts",
        "typings/es6-promise/es6-promise.d.ts",
        "typings/glob/glob.d.ts",
        "typings/node/node.d.ts",
        "typings/others.d.ts",
        "typings/tsd.d.ts",
        "typings/vinyl/vinyl.d.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
